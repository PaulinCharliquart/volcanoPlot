Package: volcanoPlot
Type: Package
Title: Volcano Plot for Clinical Trial Adverse Events
Version: 1.0.0
Authors@R: c(
	person("Jeremy", "Wildfire", email = "jwildfire@gmail.com", role = c("cre","aut")),
	person("Becca", "Krouse", role="aut"),
	person("Natalia","Andriychuk", role="aut"),
